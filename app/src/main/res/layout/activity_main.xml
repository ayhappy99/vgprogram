<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="43dp"
        android:src="@drawable/vgimg"
        app:layout_constraintBottom_toTopOf="@+id/login_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    //로그인 버튼



    <Button
        android:id="@+id/login_button"
        android:layout_width="237dp"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#0E797A"
        android:text="로그인"
        android:textColor="#F7F0ED"
        app:layout_constraintBottom_toTopOf="@+id/id_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_password" />




    //회원가입 버튼
    <Button
        android:id="@+id/join_button"
        android:layout_width="237dp"
        android:layout_height="0dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="#0E797A"
        android:text="회원가입"
        android:textColor="#F7F0ED"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwd_button" />
    /*아이디 입력*/
    <EditText
        android:id="@+id/login_id"
        android:layout_width="237dp"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:hint="아이디"
        app:layout_constraintBottom_toTopOf="@+id/login_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />




    //아이디찾기 버튼
    <Button
        android:id="@+id/id_button"
        android:layout_width="237dp"
        android:layout_height="0dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#0E797A"
        android:text="아이디 찾기"
        android:textColor="#F7F0ED"
        app:layout_constraintBottom_toTopOf="@+id/passwd_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_button" />
    //비밀번호 입력
    <EditText
        android:id="@+id/login_password"
        android:layout_width="237dp"
        android:layout_height="0dp"
        android:layout_marginBottom="44dp"
        android:ems="10"
        android:hint="비밀번호"
        app:layout_constraintBottom_toTopOf="@+id/login_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_id" />
    //비밀번호찾기 버튼
    <Button
        android:id="@+id/passwd_button"
        android:layout_width="237dp"
        android:layout_height="0dp"
        android:layout_marginBottom="35dp"
        android:backgroundTint="#0E797A"
        android:text="비밀번호 찾기"
        android:textColor="#F7F0ED"
        app:layout_constraintBottom_toTopOf="@+id/join_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_button" />


</androidx.constraintlayout.widget.ConstraintLayout>