<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="286dp"
                app:srcCompat="@drawable/vgr1" />

            <TextView
                android:id="@+id/rgr_title"
                android:layout_width="350dp"
                android:layout_height="46dp"
                android:gravity="center"
                android:text="              비건 스시롤 레시피"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rgv_material"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[재료]"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="211dp"
                app:srcCompat="@drawable/rgv_material" />

            <TextView
                android:id="@+id/rgv_material_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-말린 김\n -채 썬 비트\n -채 썬 오이\n -채 썬 당근\n -아보카도 슬라이드\n -채 썬 앵베추\n -새싹\n\n"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/rgv_sauce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[소스]"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rgv_sauce_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-레몬즙 -----> 한 컵\n -유기농미소 -----> 1 테이블스푼\n -아가베 -----> 1 테이블스푼\n -참기름 -----> 1 테이블스푼\n -카이엔 페퍼 -----> 1 테이블스푼 -물 -----> 1/4컵\n\n"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/rgv_recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[조리법]"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="396dp"
                android:layout_height="246dp"
                app:srcCompat="@drawable/vgr1recipe" />

            <TextView
                android:id="@+id/rgv_recipe_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. 김 한 장을 도마 위에 올리고, 위에 채 썬 채소들을 얹어서 단단히 말아줍니다. \n 2. 한 입 베어먹을 수 있는 크기로 잘라줍니다.\n\n"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/vgr_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="댓글" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/EditText_chat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/Button_send"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:text="SEND" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/my_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="495dp"
                    android:layout_weight="1"
                    android:scrollbars="vertical">

                </androidx.recyclerview.widget.RecyclerView>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>